# Brain service URL
BRAIN_URL=http://localhost:8000

# Whisper STT service
WHISPER_URL=http://192.168.x.x:8090

# Piper TTS paths
PIPER_PATH=/home/youruser/piper/piper
PIPER_MODEL=/home/youruser/piper-voices/en_US-lessac-medium.onnx

# Wake word sensitivity (0.0-1.0, lower = more sensitive)
WAKEWORD_THRESHOLD=0.7

# MQTT for timer notifications
MQTT_BROKER=192.168.x.x
MQTT_PORT=1883

# Logging format: text or json (json for Loki)
LOG_FORMAT=text
